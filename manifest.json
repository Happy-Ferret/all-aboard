{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "All Aboard",
    "description": "The Mozilla Firefox Educational Tool",
    "homepage_url": "https://github.com/mozilla/all-aboard",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "64": "icons/icon-64.png"
    },
    "permissions": [
        "activeTab",
        "notifications",
        "storage"
    ],
    "background": {
        "scripts": ["index.js"]
    },
    "browser_action": {
        "default_icon": "icons/icon-32_active.png",
        "default_title": "Firefox Notifications",
        "default_popup": "ui/pop-up.html"
    }
}
